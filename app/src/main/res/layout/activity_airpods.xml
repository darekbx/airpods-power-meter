<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:text="@string/state_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pods_case"
        android:textSize="32sp"
        />

    <Space
        android:id="@+id/left_space"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/left_pod"
        android:layout_width="0dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_space"
        app:layout_constraintEnd_toStartOf="@id/right_pod"
        style="@style/PodImage"
        />
    <TextView
        android:id="@+id/side_left_letter"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@id/left_pod"
        app:layout_constraintStart_toStartOf="@id/left_pod"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="18dp"
        android:padding="0dp"
        android:gravity="center"
        android:text="L"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_round_letter"
        />
    <com.darekbx.airpodspowermeter.ui.BatteryIndicator
        android:id="@+id/left_pod_indicator"
        android:layout_width="48dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@id/left_pod"
        app:layout_constraintStart_toStartOf="@id/left_pod"
        app:layout_constraintEnd_toEndOf="@id/left_pod"
        android:layout_marginTop="8dp"
        />
    <ImageView
        android:id="@+id/left_pod_charge_indicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toTopOf="@id/left_pod_indicator"
        app:layout_constraintBottom_toBottomOf="@id/left_pod_indicator"
        app:layout_constraintStart_toEndOf="@id/left_pod_indicator"
        android:src="@drawable/charge_indicator"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/left_pod_ear_indicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toTopOf="@id/left_pod_indicator"
        app:layout_constraintBottom_toBottomOf="@id/left_pod_indicator"
        app:layout_constraintStart_toEndOf="@id/left_pod_indicator"
        android:src="@drawable/ic_ear"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/left_pod_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/left_pod_indicator"
        app:layout_constraintStart_toStartOf="@id/left_pod_indicator"
        app:layout_constraintEnd_toEndOf="@id/left_pod_indicator"
        tools:text="50%"
        style="@style/PodPercent"
        />

    <ImageView
        android:id="@+id/right_pod"
        android:layout_width="0dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_pod"
        app:layout_constraintEnd_toStartOf="@id/center"
        style="@style/PodImage"
        android:scaleX="-1"
        />
    <TextView
        android:id="@+id/side_right_letter"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@id/right_pod"
        app:layout_constraintEnd_toEndOf="@id/right_pod"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="18dp"
        android:padding="0dp"
        android:gravity="center"
        android:text="R"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_round_letter"
        />
    <com.darekbx.airpodspowermeter.ui.BatteryIndicator
        android:id="@+id/right_pod_indicator"
        android:layout_width="48dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@id/right_pod"
        app:layout_constraintStart_toStartOf="@id/right_pod"
        app:layout_constraintEnd_toEndOf="@id/right_pod"
        android:layout_marginTop="8dp"
        />
    <ImageView
        android:id="@+id/right_pod_charge_indicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toTopOf="@id/right_pod_indicator"
        app:layout_constraintBottom_toBottomOf="@id/right_pod_indicator"
        app:layout_constraintStart_toEndOf="@id/right_pod_indicator"
        android:src="@drawable/charge_indicator"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/right_pod_ear_indicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toTopOf="@id/right_pod_indicator"
        app:layout_constraintBottom_toBottomOf="@id/right_pod_indicator"
        app:layout_constraintStart_toEndOf="@id/right_pod_indicator"
        android:src="@drawable/ic_ear"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/right_pod_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/right_pod_indicator"
        app:layout_constraintStart_toStartOf="@id/right_pod_indicator"
        app:layout_constraintEnd_toEndOf="@id/right_pod_indicator"
        tools:text="50%"
        style="@style/PodPercent"
        />

    <Space
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/pods_case"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/center"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/pods_case"
        />
    <com.darekbx.airpodspowermeter.ui.BatteryIndicator
        android:id="@+id/case_indicator"
        android:layout_width="48dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toBottomOf="@id/pods_case"
        app:layout_constraintStart_toStartOf="@id/pods_case"
        app:layout_constraintEnd_toEndOf="@id/pods_case"
        android:layout_marginTop="8dp"
        />
    <ImageView
        android:id="@+id/case_charge_indicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toTopOf="@id/case_indicator"
        app:layout_constraintBottom_toBottomOf="@id/case_indicator"
        app:layout_constraintStart_toEndOf="@id/case_indicator"
        android:src="@drawable/charge_indicator"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/case_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/case_indicator"
        app:layout_constraintStart_toStartOf="@id/case_indicator"
        app:layout_constraintEnd_toEndOf="@id/case_indicator"
        tools:text="50%"
        style="@style/PodPercent"
        />

    <FrameLayout
        android:id="@+id/progress_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#8000"
        android:translationZ="100dp"
        android:visibility="gone"
        >
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
